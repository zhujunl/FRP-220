<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.miaxis.sm93m.MainViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_template_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text_template_Type"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_template"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:entries="@array/template"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_template_data"
                app:layout_constraintLeft_toRightOf="@id/tv_title_template_data"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_template_data" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_template_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:onClick="@{onClickListener}"
                android:text="@string/btn_get_template_date"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title_template_data"
                app:layout_constraintRight_toRightOf="@+id/btn_get_fir_2005"
                app:layout_constraintTop_toBottomOf="@id/sp_template" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_image_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_image_Type"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/sp_image"
                app:layout_constraintLeft_toLeftOf="@+id/btn_get_template_data"
                app:layout_constraintTop_toTopOf="@+id/sp_image" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:entries="@array/image"
                app:layout_constraintLeft_toLeftOf="@+id/sp_template"
                app:layout_constraintRight_toRightOf="@+id/sp_template"
                app:layout_constraintTop_toBottomOf="@+id/btn_get_template_data" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_image_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:onClick="@{onClickListener}"
                android:text="@string/btn_get_image_date"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="@+id/btn_get_template_data"
                app:layout_constraintRight_toRightOf="@+id/btn_get_template_data"
                app:layout_constraintTop_toBottomOf="@id/sp_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_fir_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_image_Type"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/sp_fir"
                app:layout_constraintLeft_toLeftOf="@+id/btn_get_image_data"
                app:layout_constraintTop_toTopOf="@+id/sp_fir" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_fir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:entries="@array/fir"
                app:layout_constraintLeft_toLeftOf="@+id/sp_image"
                app:layout_constraintRight_toRightOf="@+id/sp_image"
                app:layout_constraintTop_toBottomOf="@+id/btn_get_image_data" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_fir_2005"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:onClick="@{onClickListener}"
                android:text="@string/btn_get_fir_date_2005"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="@+id/btn_get_image_data"
                app:layout_constraintRight_toLeftOf="@+id/btn_get_fir_2011"
                app:layout_constraintTop_toBottomOf="@id/sp_fir" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_get_fir_2011"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.opened &amp;&amp; !viewModel.busy}"
                android:onClick="@{onClickListener}"
                android:text="@string/btn_get_fir_date_2011"
                android:textAllCaps="false"
                app:layout_constraintLeft_toRightOf="@id/btn_get_fir_2005"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_get_fir_2005" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>